local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Fuzki-UI-Library/main/FuzkiLibrary.lua"))() -- Gets the Library
local Main = Library:Create("Hitbox Extender", "Universal") -- Creates Main Window | Fuzki (Hub Name) | Baseplate (Game Name)

local Hitboxes = Main:CreateSection("Hitboxes") -- | Creates section with name Hitboxes
local Advanced = Main:CreateSection("Advanced") -- | Creates section with name Advanced

Hitboxes:CreateLabel("Made By Jai") -- label

Hitboxes:CreateButton("Change Hitbox To 20", "a test", function() -- button

_G.HeadSize = 20
_G.Disabled = true
game:GetService('RunService').RenderStepped:connect(function()
    
if _G.Disabled then 
for i,v in next, game:GetService('Players'):GetPlayers() do if 
  v.Name ~= 
game:GetService('Players').LocalPlayer.Name then pcall(function()
v.Character.HumanoidRootPart.Size = Vector3.new(_G.HeadSize,_G.HeadSize,_G.HeadSize)
v.Character.HumanoidRootPart.Transparency = 0.7
v.Character.HumanoidRootPart.BrickColor = BrickColor.new("Really blue")
v.Character.HumanoidRootPart.Material = "Neon"
v.Character.HumanoidRootPart.CanCollide = false
end)
end
end
end
end)
end)

Hitboxes:CreateTextBox("Hitbox", "Enter", function(h) -- h= gets textbox text after enter pressed
    
_G.HeadSize = h
_G.Disabled = true
game:GetService('RunService').RenderStepped:connect(function()
    
if _G.Disabled then 
for i,v in next, game:GetService('Players'):GetPlayers() do if 
  v.Name ~= 
game:GetService('Players').LocalPlayer.Name then pcall(function()
v.Character.HumanoidRootPart.Size = Vector3.new(_G.HeadSize,_G.HeadSize,_G.HeadSize)
v.Character.HumanoidRootPart.Transparency = 0.7
v.Character.HumanoidRootPart.BrickColor = BrickColor.new("Really blue")
v.Character.HumanoidRootPart.Material = "Neon"
v.Character.HumanoidRootPart.CanCollide = false
end)
end
end
end
end)
end)

Hitboxes:CreateSlider(16, 500, "Slider Hitbox (don't use)", function(val) -- 16 (Min value) | 500 (Max value)
    
_G.HeadSize = val
_G.Disabled = true
game:GetService('RunService').RenderStepped:connect(function()
    
if _G.Disabled then 
for i,v in next, game:GetService('Players'):GetPlayers() do if 
  v.Name ~= 
game:GetService('Players').LocalPlayer.Name then pcall(function()
v.Character.HumanoidRootPart.Size = Vector3.new(_G.HeadSize,_G.HeadSize,_G.HeadSize)
v.Character.HumanoidRootPart.Transparency = 0.7
v.Character.HumanoidRootPart.BrickColor = BrickColor.new("Really blue")
v.Character.HumanoidRootPart.Material = "Neon"
v.Character.HumanoidRootPart.CanCollide = false
end)
end
end
end
end)
end)

Advanced:CreateTextBox("Hitbox Color", "Enter", function(c) -- c= gets textbox text after enter pressed
v.Character.HumanoidRootPart.BrickColor = BrickColor.new("c")
end)

Advanced:CreateTextBox("Hitbox Material", "Enter", function(m) -- m= gets textbox text after enter pressed
v.Character.HumanoidRootPart.Material = "m"
end)

Advanced:CreateTextBox("Hitbox Transparency", "0-1", function(t) -- t= gets textbox text after enter pressed
v.Character.HumanoidRootPart.Transparency = t
end)

Advanced:CreateTextBox("CanCollide with Hitbox", "true/false", function(cc) -- cc= gets textbox text after enter pressed
v.Character.HumanoidRootPart.CanCollide = cc
end)
